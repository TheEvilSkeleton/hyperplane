using Gtk 4.0;
using Adw 1;

template $HypItem : Box {
    margin-start: 12;
    margin-end: 12;
    margin-top: 12;
    margin-bottom: 12;
    orientation: vertical;

    Overlay thumbnail_overlay {
        overflow: hidden;
        width-request: 120;
        height-request: 100;
        halign: center;

        [overlay]
        Picture thumbnail {
            content-fit: cover;
            styles [
                "thumbnail-picture",
            ]
        }

        [overlay]
        Label extension_label {
            valign: end;
            halign: end;
            margin-bottom: 6;
            margin-end: 6;
            margin-start: 6;
            ellipsize: end;

            styles [
                "file-extension",
            ]
        }

        Image icon {
            icon-size: large;
            icon-name: "content-loading";
        }

        styles [
            "item-thumbnail",
        ]
    }
    Label label {
        margin-top: 12;
        justify: center;
        wrap: true;
        wrap-mode: word_char;
        ellipsize: middle;
        lines: 3;
        label: "â‹¯";
    }
}
